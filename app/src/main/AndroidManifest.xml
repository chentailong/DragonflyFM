<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.along.fragonflyfm">

    <uses-permission android:name="android.permission.INTERNET" />
    <!--它可以监听用户的连接状态并在用户重新连接到网络时重启之前失败的请求-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:name=".util.AppUtils"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/ic_adobe_fm"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.ProgramActivity" />
        <activity android:name=".activities.PlayerActivity"
            android:launchMode="singleInstance"/>
        <activity android:name=".activities.AwaitActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.JSONUtils"
            android:enabled="true" />

        <service
            android:name=".service.FMItemJsonUtil"
            android:enabled="true" />

        <service
            android:name=".service.PlayUtil"
            android:enabled="true" />
    </application>

</manifest>