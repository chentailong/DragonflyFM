<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTitle">


    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/program_trumpet_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15sp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_trumpet" />

        <TextView
            android:id="@+id/program_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/program_trumpet_imageView"
            android:text="我是大标题"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/program_people_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/program_people"
            android:background="@drawable/ic_peoples" />

        <TextView
            android:id="@+id/program_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="15000" />

        <ImageView
            android:id="@+id/program_microphone_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/program_trumpet_imageView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15sp"
            android:background="@drawable/ic_microphone" />

        <TextView
            android:id="@+id/program_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/program_title"
            android:layout_centerVetical="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/program_microphone_imageView"
            android:text="陆秋傧 ， 胡大航" />

        <TextView
            android:id="@+id/program_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/program_title"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/program_end_time"
            android:text="15:00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/program_title"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/program_end_time"
            android:text=" - " />

        <TextView
            android:id="@+id/program_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/program_title"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="19:00" />

    </RelativeLayout>

</>