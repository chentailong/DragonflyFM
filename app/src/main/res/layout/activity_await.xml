<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AwaitActivity">

    <FrameLayout
        android:id="@+id/fragment_await_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/await_tv_copy_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="50dp"
            android:text="@string/txt_copy_right"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="@dimen/smallText" />

        
        <TextView
            android:id="@+id/await_tv_count_down"
            android:layout_width="@dimen/circleRadius"
            android:layout_height="@dimen/circleRadius"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/smallText"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_circle_style"
            android:gravity="center"
            android:textSize="15dp"
            tools:text="5ç§’" />


    </RelativeLayout>
</FrameLayout>
